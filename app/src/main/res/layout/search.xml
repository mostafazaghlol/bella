<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاسم"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/name_search_Edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/home"
                android:focusableInTouchMode="true"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="المدينه"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/city_search_Edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/mail"
                android:focusableInTouchMode="true"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاعلى تقيما"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/highest_search_Edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/notepad"
                android:focusableInTouchMode="true"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="الاعلى حجزا"
            android:textColorHint="@android:color/black">

            <EditText
                android:id="@+id/highest_reserved_search_Edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="25dp"
                android:drawableRight="@drawable/notepad"
                android:focusableInTouchMode="true"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="20dp"
            android:background="@drawable/head"
            android:text="بحـث"
            android:textColor="@android:color/white" />

    </LinearLayout>


</LinearLayout>